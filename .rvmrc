#!/usr/bin/env bash

best_ruby_193=`rvm list strings | grep "1.9.3" | sort | tail -1`
any_ruby_193="1.9.3"
gemset_name="chef"

if [ -z "${best_ruby_193:-1}" ]; then

  # Notify the user to install the desired interpreter before proceeding.
  echo "${any_ruby_193} was not found, please run 'rvm install ${any_ruby_193}' and then cd back into the project directory."

else

  # Load or create the specified environment
  if [[ -d "${rvm_path:-$HOME/.rvm}/environments" \
    && -s "${rvm_path:-$HOME/.rvm}/environments/${best_ruby_193}@${gemset_name}" ]] ; then
    \. "${rvm_path:-$HOME/.rvm}/environments/${best_ruby_193}@${gemset_name}"
  else
    rvm --create  "${best_ruby_193}@${gemset_name}"
  fi

  (
    # Ensure that Bundler is installed, install it if it is not.
    if ! command -v bundle ; then
      gem install bundler
    fi

    # Bundle while redcing excess noise.
    bundle | grep -v 'Using' | grep -v 'complete' | sed '/^$/d'
  )&

fi

if [[ -s .rvmrc.local ]] ; then source .rvmrc.local ; fi
