# Outgoing email settings
production:
  email_delivery:
  <% if @method == "sendmail" %>
    delivery_method: :sendmail
  <% elsif @method == "smtp" %>
    delivery_method: :smtp
    smtp_settings:
      address: <%= @address %>
      port: <%= @port %>
      authentication: :<%= @authentication %>
      <% unless @authentication == "none" %>
      domain: <%= @domain %>
      user_name: <%= @user_name %>
      password: <%= @password %>
      <% end %>
  <% end %>
